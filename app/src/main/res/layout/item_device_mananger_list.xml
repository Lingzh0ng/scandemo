<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="2dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.wearapay.scandemo.weight.CustomLabelCell
        android:id="@+id/cellBanlace"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        app:cell_padding_right="20dp"
        app:cell_title="设备编号"
        app:cell_title_size="@dimen/text_size_small"
        app:cell_value_size="@dimen/text_size_small"
        app:forward_visible_status="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle1" />


    <Button
        android:id="@+id/btnLoss"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:background="@drawable/btn_primary"
        android:text="挂失" />

</LinearLayout>